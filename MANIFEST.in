# Include configuration files
include config/*.yaml
include config/*.yml

# Include data files
recursive-include src/data/scenarios *.yaml
recursive-include src/data/scenarios *.yml
recursive-include src/data/learn_modules *.yaml
recursive-include src/data/learn_modules *.yml
include src/data/schema.sql
include src/agent/lfcs-check
recursive-include src/data/docker *

# Include validation scripts
recursive-include docker/validation_scripts *.sh
recursive-include docker/validation_scripts *.py

# Include Docker base images (Dockerfiles and build scripts)
recursive-include docker/base_images *
include docker/base_images/build_all.sh
include docker/base_images/README.md

# Include documentation
include README.md
include LICENSE
recursive-include docs *.md

# Exclude unnecessary files
exclude .env
exclude .env.example
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
